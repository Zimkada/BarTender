{
  "name": "BarTender Pro - Gestion de Bar",
  "short_name": "BarTender",
  "description": "Application de gestion pour bars et restaurants - Optimisée pour l'Afrique de l'Ouest",
  "start_url": "/",
  "display": "standalone",
  "orientation": "portrait-primary",
  "theme_color": "#f59e0b",
  "background_color": "#fef3c7",
  "lang": "fr",
  "scope": "/",

  "icons": [
    {
      "src": "/icon-72x72.png",
      "sizes": "72x72",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/icon-96x96.png",
      "sizes": "96x96",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/icon-128x128.png",
      "sizes": "128x128",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/icon-144x144.png",
      "sizes": "144x144",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/icon-152x152.png",
      "sizes": "152x152",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/icon-384x384.png",
      "sizes": "384x384",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    }
  ],

  "categories": ["business", "productivity", "finance"],
  "screenshots": [
    {
      "src": "/screenshot-mobile.png",
      "sizes": "390x844",
      "type": "image/png",
      "form_factor": "narrow"
    },
    {
      "src": "/screenshot-tablet.png",
      "sizes": "768x1024",
      "type": "image/png",
      "form_factor": "wide"
    }
  ],

  "shortcuts": [
    {
      "name": "Nouvelle Vente",
      "short_name": "Vente",
      "description": "Démarrer une nouvelle vente",
      "url": "/?action=new-sale",
      "icons": [
        {
          "src": "/shortcut-sale.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Inventaire",
      "short_name": "Stock",
      "description": "Consulter l'inventaire",
      "url": "/?action=inventory",
      "icons": [
        {
          "src": "/shortcut-inventory.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Rapports",
      "short_name": "Rapports",
      "description": "Voir les ventes du jour",
      "url": "/?action=reports",
      "icons": [
        {
          "src": "/shortcut-reports.png",
          "sizes": "96x96"
        }
      ]
    }
  ],

  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "reports",
          "accept": ["text/plain", ".csv", ".pdf"]
        }
      ]
    }
  },

  "protocol_handlers": [
    {
      "protocol": "web+bartender",
      "url": "/?action=%s"
    }
  ],

  "prefer_related_applications": false,
  "related_applications": [
    {
      "platform": "play",
      "url": "https://play.google.com/store/apps/details?id=com.bartender.app",
      "id": "com.bartender.app"
    }
  ],

  "capture_links": "new-client",
  "launch_handler": {
    "client_mode": "navigate-existing"
  },

  "edge_side_panel": {
    "preferred_width": 400
  }
}